<% title "Films" %>

<table>
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th>Description</th>
  </tr>
  <% for film in @films %>
    <tr>
      <td><%= film.name %></td>
      <td><%= film.url %></td>
      <td><%= film.description %></td>
      <td><%= link_to "Show", film %></td>
      <td><%= link_to "Edit", edit_film_path(film) %></td>
      <td><%= link_to "Destroy", film, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Film", new_film_path %></p>
